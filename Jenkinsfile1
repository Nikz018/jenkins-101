pipeline {
    agent { 
        node {
            label 'docker-agent-alpine'
            }
      }
triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "doing build stuff this morning.."
                cd myapp
                pip install -r requirements.txt
                '''
            }
        }
    stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/Nikz018/jenkins-101.git > trufflehog'
        sh 'cat trufflehog'
      }
    }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "doing test stuff.."
                cd myapp
                python3 hello.py
                python3 hello.py --name=deep
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}